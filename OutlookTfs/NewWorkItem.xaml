<Window
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OutlookTfs" x:Class="OutlookTfs.NewWorkItem" 
             mc:Ignorable="d" Title="New TFS item" WindowStyle="ToolWindow" Width="550" Height="340" >
    <Window.DataContext>
        <local:AppViewModel/>
    </Window.DataContext>
    <Grid Background="#FFEAE7E7" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="243*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Connection" HorizontalAlignment="Left" Margin="10,12,0,0" VerticalAlignment="Top" Width="73" Height="26"/>
        <TextBox Height="23" Margin="88,16,35,0" TextWrapping="Wrap" Text="{Binding TfsConnection.DisplayName, Mode=OneWay}" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button Content="..." Margin="0,18,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.531,0.45" Grid.Column="1" ToolTip="Change TFS connection" Cursor="Hand" Command="{Binding ChangeConnectionCommand}" UseLayoutRounding="True" HorizontalAlignment="Right" Width="20" Height="20"/>
        <Label Content="Item type" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="73" Height="26"/>
        <ComboBox Margin="88,53,10,0" VerticalAlignment="Top" ItemsSource="{Binding ItemTypes, Mode=OneWay}" SelectedIndex="0" SelectedValue="{Binding ItemType}" Height="22"/>
        <Button Content="Cancel" HorizontalAlignment="Right" Margin="0,0,11,10" VerticalAlignment="Bottom" Width="75" IsCancel="True" Grid.Column="1" Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Height="20" />
        <Button Content="Create" HorizontalAlignment="Right" Margin="0,0,89,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Grid.Column="1" Command="{Binding OkCommand}" RenderTransformOrigin="-0.92,0.3" Height="20"/>
        <Label Content="Assign To" HorizontalAlignment="Left" Margin="10,123,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.053,0.346" Width="73" Height="26"/>
        <ComboBox Margin="88,123,9,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="22" ItemsSource="{Binding Users, Mode=OneWay}" SelectedValue="{Binding AssignedTo}"/>
        <Label Content="Title" HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" Width="73" Height="26"/>
        <TextBox Height="23" Margin="87,161,11,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Text="{Binding Title}"/>
        <Label Content="Area" Grid.Column="1" HorizontalAlignment="Left" Margin="0,50,0,0" VerticalAlignment="Top"/>
        <ComboBox Grid.Column="1" Margin="42,53,11,0" VerticalAlignment="Top" ItemsSource="{Binding Areas, Mode=OneWay}" SelectedIndex="0" SelectedValue="{Binding AreaPath}"/>
        <Label Content="Comment" HorizontalAlignment="Left" Margin="10,189,0,0" VerticalAlignment="Top" Width="73"/>
        <TextBox Margin="87,189,11,35" TextWrapping="Wrap" Grid.ColumnSpan="2" Text="{Binding Comment}"/>
        <Label Content="Priority" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="73"/>
        <Label Content="Iteration" Grid.Column="1" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.745,0.423" Width="58"/>
        <ComboBox Grid.Column="1" Margin="73,92,11,0" VerticalAlignment="Top" ItemsSource="{Binding Iterations, Mode=OneWay}" SelectedIndex="0" SelectedValue="{Binding Iteration}"/>
        <ComboBox HorizontalAlignment="Left" Margin="87,92,0,0" VerticalAlignment="Top" Width="79" ItemsSource="{Binding Priorities, Mode=OneWay}" SelectedValue="{Binding Priority}"/>
    </Grid>
</Window>
